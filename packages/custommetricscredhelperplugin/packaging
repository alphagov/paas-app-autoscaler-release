set -e -x

export GOROOT=$(readlink -nf /var/vcap/packages/golang)
export PATH=$GOROOT/bin:$PATH
export GOPATH=${BOSH_COMPILE_TARGET}/app-autoscaler
export GOCACHE=/tmp/gocache

pushd ${BOSH_COMPILE_TARGET}/app-autoscaler/src/autoscaler
  GOPROXY=off make build-custom-metrics-cred-helper-plugin
popd

cp -a ${BOSH_COMPILE_TARGET}/app-autoscaler/src/autoscaler/build/custom-metrics-cred-helper-plugin ${BOSH_INSTALL_TARGET}
